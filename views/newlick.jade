extends layout

block content
  script(src='abcjs_editor_1.12-min.js', type='text/javascript')
  .site-wrapper
    .cover-container
      .inner
        h3.masthead-brand LicksDB
        nav
          ul.nav.masthead-nav
            li.active
              a(href='/') Home
    br
    .container(align='center')
      h1
        | Add Lick To DB
        h1
          form(class='form-inline', role='form', action='licksubmit', method='POST')
            .form-group
              | Type: 
              input(class='form-control', type='text', name='type')
              |  
            .form-group
              | &nbsp;Key: 
              input(class='form-control', type='text', name='key')
              |  
            .form-group
              | &nbsp;Meter: 
              input(class='form-control', type='text', name='meter')
              |  
            br
            br
            .form-group
              textarea#abc(class='form-control', name='licktext', cols='80', rows='15')
                | X: 1
                | T: Cooley&apos;s
                | M: 4/4
                | L: 1/8
                | R: reel
                | K: Emin
                | |:D2|EB{c}BA B2 EB|~B2 AB dBAG|FDAD BDAD|FDAD dAFD|
                | EBBA B2 EB|B2 AB defg|afe^c dBAF|DEFD E2:|
                | |:gf|eB B2 efge|eB B2 gedB|A2 FA DAFA|A2 FA defg|
                | eB B2 eBgB|eB B2 defg|afe^c dBAF|DEFD E2:|
            hr
            .jumbotron
              #midi
              #warnings
              #music
              #paper
              script(type='text/javascript').
                window.onload = function() {
                abc_editor = new ABCJS.Editor("abc", { paper_id: "paper", warnings_id:"warnings" });
                }
            button.btn.btn-default(type='submit') Submit
            br
            br
